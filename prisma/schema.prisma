generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Page {
  id           String  @id @default(cuid())
  title        String
  previewImage String? @db.Text
  content      String? @db.LongText

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([id])
}
